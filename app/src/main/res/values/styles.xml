<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewHolderPokemonName">
        <item name="fontFamily">@font/oxanium_medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black_rustic_red</item>
    </style>

    <style name="ViewHolderPokemonNumber" parent="ViewHolderPokemonName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_whisper_darkened</item>
    </style>

    <style name="DefaultText">
        <item name="fontFamily">@font/oxanium_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/data_color</item>
    </style>

    <style name="TagPokemonDetails" parent="ContentPokemonDetails">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentPokemonDetails">
        <item name="fontFamily">@font/oxanium_medium</item>
        <item name="android:textColor">@color/data_color</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="PokemonNomeDetails" parent="TagPokemonDetails">
        <item name="android:textSize">36sp</item>
    </style>
    
    <style name="ToolbarColor" >
        <item name="colorControlNormal">@color/black</item>
    </style>

</resources>