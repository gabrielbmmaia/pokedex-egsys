    <!--    SearchView  -  Botão Tipos -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_home_search_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/home_search_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_black_stroke"
            app:iconifiedByDefault="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/elementos_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryBackground="@android:color/transparent"
            app:queryHint="Pokemon ou Número ..." />

        <TextView
            android:id="@+id/elementos_button"
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/shape_black_stroke"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/button_tipos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@drawable/shape_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_home_search_view">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_homefragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/vh_pokemon" />

        <include
            android:id="@+id/internet_problems"
            layout="@layout/internet_error"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/pokeball_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/pokeball_icon"
        android:src="@drawable/pokeball_icon"
        app:layout_constraintBottom_toBottomOf="@+id/rv_layout"
        app:layout_constraintEnd_toEndOf="@+id/rv_layout"
        app:layout_constraintStart_toStartOf="@id/rv_layout"
        app:layout_constraintTop_toBottomOf="@+id/rv_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>
